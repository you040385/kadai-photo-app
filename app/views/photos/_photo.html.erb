<div id="<%= dom_id photo %>">
  <p>
    <%= photo.title %>
  </p>

  <p>
    <%= image_tag photo_file_path(photo), size: '300x300' if photo.file.attached? %>
  </p>

  <% if my_tweet_app_enabled? %>
    <p>
      <%= button_to 'ツイートする', photo_tweets_path(photo), method: :post %>
    </p>
  <% end %>
</div>
